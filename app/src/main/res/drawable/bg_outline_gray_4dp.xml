<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item>
        <shape>
            <solid android:color="@color/grey_mild" /> <!-- Shadow color and opacity -->

        </shape>
    </item>

    <!-- Content layer -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape>
            <solid android:color="@color/white" /> <!-- Background color of the content -->

        </shape>
    </item>

</layer-list>
